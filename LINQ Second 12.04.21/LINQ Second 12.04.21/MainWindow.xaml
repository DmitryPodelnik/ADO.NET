<Window x:Class="LINQ_Second_12._04._21.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LINQ_Second_12._04._21"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="MainWindow_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center">Type of stone</TextBlock>
        <ComboBox x:Name="stoneType" Width="150" Height="22" SelectionChanged="stoneType_SelectionChanged"></ComboBox>

        <ListView x:Name="mainListView" Grid.RowSpan="2" Grid.Column="1"></ListView>
    </Grid>
</Window>
